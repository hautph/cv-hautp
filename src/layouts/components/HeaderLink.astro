---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

// Improved active state detection
const { pathname } = Astro.url;
const isActive = pathname === href || (href !== '/' && pathname.startsWith(href));
---

<a
	href={href}
	class:list={[
		className,
		{ 'border-b-2 border-blue-500 dark:border-purple-500 font-bold text-blue-600 dark:text-blue-400': isActive },
		{ 'text-zinc-600 dark:text-zinc-200 hover:text-blue-600 dark:hover:text-blue-400': !isActive },
		{ 'text-zinc-950 dark:text-zinc-50': isActive },
		'block' // Ensure it's always a block element
	]}
	{...props}>
	<slot />
</a>