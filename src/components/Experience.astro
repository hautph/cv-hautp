<style>
	@keyframes green-pulse {
		0%,
		100% {
			background-color: rgb(74 222 128); /* green-400 */
			box-shadow:
				0 10px 15px -3px rgba(74, 222, 128, 0.5),
				0 4px 6px -2px rgba(74, 222, 128, 0.5);
		}
		50% {
			background-color: rgb(34 197 94); /* green-500 */
			box-shadow:
				0 10px 15px -3px rgba(34, 197, 94, 0.8),
				0 4px 6px -2px rgba(34, 197, 94, 0.8);
		}
	}

	.green-pulse {
		animation: green-pulse 2s ease-in-out infinite;
	}
	
	.experience-card {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid rgba(0, 0, 0, 0.05);
		background: rgba(255, 255, 255, 0.85);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
	}
	
	.dark .experience-card {
		background: rgba(25, 25, 25, 0.85);
		border: 1px solid rgba(255, 255, 255, 0.1);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.15);
	}
	
	.experience-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		border-color: rgba(59, 130, 246, 0.3);
	}
	
	.dark .experience-card:hover {
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
		border-color: rgba(99, 155, 255, 0.5);
	}
	
	.timeline-line {
		background: linear-gradient(to bottom, #3b82f6, #8b5cf6);
	}
	
	.timeline-circle {
		transition: all 0.3s ease-out;
		transform: scale(1);
	}
	
	.experience-card:hover .timeline-circle {
		transform: scale(1.2);
		box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
	}
	
	/* Gray timeline circle in dark mode */
	.dark .gray-timeline-circle {
		background-color: #94a3b8; /* slate-400 */
		border-color: #18181b;
	}
	
	/* Enhanced visibility for green timeline circles in dark mode */
	.dark .green-timeline-circle {
		box-shadow: 0 0 8px rgba(74, 222, 128, 0.7);
	}
	
	/* Icon container */
	.icon-container {
		background: linear-gradient(145deg, #3b82f6, #8b5cf6);
		border: 2px solid white;
	}
	
	.dark .icon-container {
		border-color: #18181b;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
	}
	
	/* Section header */
	.section-header {
		position: relative;
		display: inline-block;
	}
	
	.section-header::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 0;
		width: 50px;
		height: 3px;
		background: linear-gradient(to right, #3b82f6, #8b5cf6);
		border-radius: 2px;
	}
	
	/* Company badge */
	.company-badge {
		background: rgba(59, 130, 246, 0.1);
		color: #3b82f6;
	}
	
	.dark .company-badge {
		background: rgba(99, 155, 255, 0.15);
		color: #639bff;
		border: 1px solid rgba(99, 155, 255, 0.2);
	}
	
	/* Period badge */
