---
import ProjectList from './ProjectList.astro';
import { projects } from '../lib/projects';
const top6Projects = projects.slice(0, 6);
---

<section class='flex flex-col justify-center lg:min-h-screen py-12'>
	<div class='mb-12 text-center animate-fade-in-up'>
		<h2 class='text-3xl font-bold mb-2'>My Projects</h2>
		<p class='text-zinc-700 dark:text-zinc-300 text-lg max-w-2xl mx-auto'>A selection of my real-world and open source projects.</p>
	</div>
	<div class='flex justify-between items-center gap-2 mb-8'>
		<h3 class='text-lg font-bold mb-3'>Featured Projects</h3>
		<a href='/projects/' class='inline-block py-2 underline dark:prose-invert hover:text-blue-600 dark:hover:text-blue-300 transition-colors duration-300 group'>
			All projects 
			<span class='inline-block transition-transform duration-300 group-hover:translate-x-1'>&raquo;</span>
		</a>
	</div>
	{
		top6Projects.length === 0 ? (
			<div class='text-gray-500 text-lg py-8 text-center'>No projects found.</div>
		) : (
			<ProjectList projects={top6Projects} />
		)
	}
</section>