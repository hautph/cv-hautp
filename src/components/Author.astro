---
type PicSize = 'sm' | 'md' | 'lg';
interface Props {
	picSize: PicSize;
}
const { picSize } = Astro.props;
---

<div class='flex gap-4 items-center leading-tight not-prose'>
	<a
		href='https://github.com/muhammad-fiaz'
		target='_blank'
		rel='noopener noreferrer'
		class:list={[
			'rounded-full overflow-hidden shrink-0',
			{ 'w-12 h-12': picSize === 'sm' },
			{ 'w-[70px] h-[70px]': picSize === 'md' },
			{ 'w-[90px] h-[90px]': picSize === 'lg' }
		]}>
		<img 
			src='https://avatars.githubusercontent.com/u/75434191?v=4' 
			alt='Muhammad Fiaz' 
			width='300' 
			height='300'
			class='w-full h-full object-cover'
			loading='lazy'
		/>
	</a>
	<div>
		<div>
			<a
				href='https://github.com/muhammad-fiaz'
				class='block font-bold text-inherit hover:text-(--link-color)'
				target='_blank'
				rel='noopener noreferrer'>
				Muhammad Fiaz
			</a>
		</div>
		<small class='avatar__subtitle'>Full Stack Engineer</small>
	</div>
</div>
